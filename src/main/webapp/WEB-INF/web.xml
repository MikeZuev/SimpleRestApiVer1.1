<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >


<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
    <servlet-name>UserRestControllerV1 </servlet-name>
    <servlet-class>net.test.tomcat.app.controller.UserRestControllerV1</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileRestContollerV1</servlet-name>
    <servlet-class>net.test.tomcat.app.controller.FileRestControllerV1</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EventRestControllerV1</servlet-name>
    <servlet-class>net.test.tomcat.app.controller.EventRestControllerV1</servlet-class>
  </servlet>
<!--  Fix servlet names and paths ***RestControllerV1 -->
  <servlet-mapping>
    <servlet-name>UserRestControllerV1 </servlet-name>
    <url-pattern>/api/v1/users/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>FileRestContollerV1</servlet-name>
    <url-pattern>/api/v1/files/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>EventRestControllerV1</servlet-name>
    <url-pattern>/api/v1/events/*</url-pattern>
  </servlet-mapping>
</web-app>
